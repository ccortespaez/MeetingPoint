<main>
  <section id="events">
    <div class="container">
      <div class="section-event">
        <h2 class="text-center pb-5">Escoje tus eventos favoritos y disfruta</h2>
      </div>
      <div class="row">
        {{#each data}}
        <div class="col-lg-4 col-md-6">
          <div class="event" data-aos="fade-up" data-aos-delay="300">
            <img src="{{image}}" alt="image" class="img-fluid">
            <div class="details">
              <h3><a href="event-details.html">{{title}}</a></h3>
              <p>Modalidad: {{type}}</p>
              <div class="button-show">
                <a href="/view-event/{{id}}" class="btn btn-sm bg-secondary">Ver más</a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section><!-- End Speakers Section -->
</main>
