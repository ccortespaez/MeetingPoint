                        <h2 class="text-center">Inicio de sesión</h2>
                        <form action="#" method="POST" class="needs-validation" novalidate>
                            <div class="form-group mt-5">
                                <label for="email">Correo</label>
                                <input class="form-control form-control-success bg-primary" type="email"
                                    placeholder="correo@correo.cl*" name="email" required minlength="7" maxlength="60"> 
                                     <div class="valid-feedback">
                                        Bien hecho :D
                                    </div>
                                    <div id="validationServer03Feedback" class="invalid-feedback">
                                        Tu correo es invalido
                                    </div>
                            </div>
                            <div class="form-group mt-4">
                                <label for="password">Contraseña</label>
                                <input class="form-control form-control-success bg-primary" type="password"
                                    placeholder="**********" name="password" required minlength="8" maxlength="16">
                                    <div class="valid-feedback">
                                        Bien hecho :D
                                    </div>
                                    <div id="validationServer03Feedback" class="invalid-feedback">
                                        La contraseña es incorrecta
                                    </div>
                            </div>
                            <div class="d-grid gap-2 d-md-flex justify-content-center mt-2">
                                <button type="submit" class="btn mt-4 bg-primary">Ingresar</button>
                            </div>
                            <div class="text-center mt-5">
                                <p>¿No estas registrado en Meeting Point?
                                    <br>
                                    <a href="/register">Registrate aqui</a>
                                    <input type="hidden" value="true">
                                </p>
                            </div>
                        </form>

