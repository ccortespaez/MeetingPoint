<header>
    <div class="d-flex" id="content-wrapper">
        <div class="w-100">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                    <button class="btn admin-bg-grey" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                        <i class="bi bi-caret-right-fill"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle" style="font-size: 30px;"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Fin Navbar -->

            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample"
                aria-labelledby="offcanvasExampleLabel">
                <div class="offcanvas-header admin-bg-primary">
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <!-- Sidebar -->
                <div id="sidebar-container" class="admin-bg-primary">
                    <div class="logo">
                        <h4 class="text-light font-weight-bold">
                            <hr />
                            Panel Administrador
                            <hr />
                        </h4>
                    </div>
                    <div class="menu">
                        <a href="panel_admin" class="d-block ps-3 border-0 a_sideBar">
                            <i class='bx bxs-home bx-sm'></i>
                            Home</a>
                        <a href="#" class="d-block ps-3 mt-3 border-0 a_sideBar"><i class='bx bx-restaurant bx-sm'></i>
                            Restaurants</a>
                        <a href="#" class="d-block ps-3 mt-3 border-0 a_sideBar"><i class='bx bx-user bx-sm'></i>
                            Consumidores</a>
                    </div>
                </div>
                <!-- Fin sidebar -->
            </div>
        </div>
    </div>
</header>

<main>
    <!-- Page Content -->
    <div id="content" class="bg-grey w-100">
        <section class="bg-light py-3">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-md-8">
                        <h1 class="font-weight-bold mb-0">Bienvenido {{user}}</h1>
                        <p class="lead text-muted">Revisa la informaciÃ³n de Altiiro</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-mix py-3">
            <div class="container">
                <div class="card rounded-0">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 d-flex stat my-3">
                                <div class="mx-auto">
                                    <button class="btn admin-btn-primary">Ir a Restaurantes</button>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 d-flex stat my-3">
                                <div class="mx-auto">
                                    <button class="btn admin-btn-primary">Ir a Consumidores</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="mt-4 col-md-8 container">
            <div class="row">
                {{#each data}}
                <div class="card col-md-3 p-3 m-2">
                    <div class="card-header">
                    <img src="{{image}}" alt="image" class="img-thumbail img-fluid">
                    <strong class="card-title">{{title}}</strong>
                    </div>
                    <div class="card-body">
                        {{description}}
                    </div>
                    <div class="card-footer">
                            <a href="/admin/data-delete/{{id}}" class="btn btn-sm btn-danger">Borrar</a>
                            <a href="/admin/data-edit/{{id}}" class="btn btn-sm btn-danger">Editar</a>
                            <a href="/admin/view-event/{{id}}" class="btn btn-sm btn-danger">Ver detalles</a>
                    </div>
                </div>
                    {{/each}}
            </div>
        </div>
    </div>
</main>
