<header>
    <div class="d-flex" id="content-wrapper">
        <div class="w-100">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
                <div class="container">
                    <button class="btn admin-bg-grey" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                        <i class="bi bi-caret-right-fill" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle" style="font-size: 30px;">{{name}}</i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/logout">Cerrar sesi√≥n</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Fin Navbar -->

            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample"
                aria-labelledby="offcanvasExampleLabel">
                <div class="offcanvas-header bg-secondary">
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <!-- Sidebar -->
                <div id="sidebar-container" class="bg-secondary ">
                    <div class="logo">
                        <h4 class="text-light font-weight-bold">
                            <hr />
                            Panel Administrador
                            <hr />
                        </h4>
                    </div>
                    <div class="menu">
                        <a href="panel_admin" class="d-block ps-3 border-0 a_sideBar">
                            <i class='bx bxs-home bx-sm'></i>
                            Inicio</a>
                        <a href="#" class="d-block ps-3 mt-3 border-0 a_sideBar"><i class='bx bx-restaurant bx-sm'></i>
                            Eventos</a>
                    </div>
                </div>
                <!-- Fin sidebar -->
            </div>
        </div>
    </div>
</header>

<main>
    <!-- Page Content -->
    <div id="content" class="w-100 admin-bg-grey">
        <section class="py-3">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-md-8">
                        <h1 class="font-weight-bold mb-0">Gestiona tus eventos</h1>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-mix py-3">
            <div class="container">
                <div class="card rounded-0">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg col-md-4  d-flex stat my-3">
                                <div class="mx-auto">
                                    <div class="btn-group btn-group-lg" role="group"><button class="btn bg-primary">Crear Evento</button></div>
                                </div>
                            </div>
                            <div class="col-lg col-md-4  d-flex stat my-3">
                                <div class="mx-auto">
                                    <div class="btn-group btn-group-lg" role="group"><button class="btn bg-primary">Ver eventos</button></div>
                                </div>
                            </div>
                            <div class="col-lg col-md-4  d-flex stat my-3">
                                <div class="mx-auto">
                                    <div class="btn-group btn-group-lg" role="group"><button class="btn bg-primary">Volver al sitio principal</button></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-mix py-3">
            <div class="container">
                <div class="card rounded-4">
                    <div class="card-body">
                        <div class="row table-responsive">
                            <table class="table white table-hover m-2">
                                <thead>
                                    <tr>
                                        <th scope="col">Nombre evento</th>
                                        <th scope="col">Productora</th>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Lugar</th>
                                        <th scope="col">Tipo de evento</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data}}
                                    <tr>
                                        <td>{{title}}</td>
                                        <td>{{producer}}</td>
                                        <td>{{datestart}}</td>
                                        <td>{{location}}</td>
                                        <td>{{type}}</td>
                                        <td>
                                            <a href="/admin/view-event/{{id}}" class="btn btn-sm bg-primary">Ver detalles</a>
                                            <a href="/admin/data-edit/{{id}}" class="btn btn-sm bg-secondary">Editar</a>
                                            <a href="/admin/data-delete/{{id}}" class="btn btn-sm btn-danger">Borrar</a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</main>